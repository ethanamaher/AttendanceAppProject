<!-- Canh Nguyen -->
<Window x:Class="AttendanceAppProject.ProfessorLogin.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendanceAppProject.ProfessorLogin"
        mc:Ignorable="d"
        Title="PROFESSOR HUB" Height="450" Width="500"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Login Button Style -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006400"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004D00"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="component\Images\loginbackground.png" Stretch="UniformToFill" Opacity="1"/>
        </Grid.Background>

        <!-- Login box - vertically centered -->
        <Border Background="#FFFFFF" 
                CornerRadius="10" 
                Padding="20" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Width="210"
                Margin="250,0,0,0" Height="378">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <!-- Professor Image -->
                <Image Source="component\Images\professor.png" 
                       Height="60" 
                       Margin="0,0,0,5"/>
                <!-- Colored Title with TextBlocks in horizontal layout -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock Text="PROFESSOR " 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="Green"/>
                    <TextBlock Text="HUB" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="Orange"/>
                </StackPanel>
                <TextBlock Text="Professor ID:" 
                           Margin="0,5,0,5"
                           FontWeight="Bold"/>

                <!-- Professor ID input with rounded border approach -->
                <Border CornerRadius="8" 
                        Background="Orange" 
                        Padding="8,0,8,0" 
                        Height="30" 
                        Margin="0,0,0,10">
                    <TextBox x:Name="ProfessorIdTextBox" 
                             Foreground="White"
                             Background="Transparent"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Password:" 
                           Margin="0,5,0,5"
                           FontWeight="Bold"/>

                <!-- Password input with rounded border approach -->
                <Border CornerRadius="8" 
                        Background="Orange" 
                        Padding="8,0,8,0" 
                        Height="30" 
                        Margin="0,0,0,10">
                    <PasswordBox x:Name="PasswordBox" 
                                 Foreground="White"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"/>
                </Border>

                <!-- Remember Me Checkbox -->
                <CheckBox x:Name="RememberMeCheckBox" 
                          Content="Remember me" 
                          Margin="0,5,0,5"/>

                <!-- Forgot Password Link -->
                <TextBlock HorizontalAlignment="Right" 
                           Margin="0,0,0,10">
                    <Hyperlink x:Name="ForgotPasswordLink"
                               Click="ForgotPasswordLink_Click">
                        <TextBlock Text="Forgot password?" 
                                   FontSize="12"/>
                    </Hyperlink>
                </TextBlock>

                <Button Content="Login" 
                        Click="LoginButton_Click" 
                        Style="{StaticResource LoginButtonStyle}" 
                        Height="35" 
                        Margin="30,5,30,10"/>
                <TextBlock x:Name="StatusTextBlock" 
                           TextAlignment="Center" 
                           Margin="0,5,0,0" 
                           Foreground="Red"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>